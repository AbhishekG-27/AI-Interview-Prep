generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Plan {
  free
  pro
}

model User {
  id             String      @id @default(cuid())
  username       String
  email          String      @unique
  password       String
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt
  currentPlan    Plan        @default(free)
  interviewsLeft Int         @default(1)
  Interview      Interview[]
}

model Interview {
  id                String   @id @default(cuid())
  userId            String
  role              String
  amount            Int
  level             String
  questions         String[] @default([])
  techStack         String[] @default([])
  isCompleted       Boolean  @default(false)
  interviewAnalysis String?  @default("")
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])

  @@index([userId])
}
